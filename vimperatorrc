" Vimperator Settings /*{{{*/

" colorscheme
colorscheme indigo

set titlestring=""
set visualbell
set wildmode=full
"set wildmode=list:longest,full

" gui
set gui=none,tabs

" animation
set animations=false

" default search/suggest engine: google
set defsearch=google
set suggestengines=google

" don't focus any "input" elements automatically when open pages. 
set focuscontent

" completion priority in :[tab]open
"s - Search engines and keyword URLs
"f - Local files
"l - Firefox location bar entries
"(bookmarks and history sorted in an intelligent way)
"b - Bookmarks
"h - History
"S - Search engine suggestions
"t - Open tabs
set complete=bSl

" Controls which characters are used to generate hint labels
set hintchars="qwertyuiopasdfghjklzxcvbnm"

" a max number of listing items
set maxitems=20

" scrollbar
set scrollbars=true

" status bar
set status=position,input,location
": tabcount

" commands history
set messages=0

set hlsearch
set smartcase

" /*}}}*/

" Firefox settings /*{{{*/

" start page
set! browser.startup.homepage=about:newtab ;;

" Make Firefox run faster by using JIT
set! javascript.options.jit.chrome=true

" popup and permission in fullscreen
set! dom.disable_beforeunload=true 

" Don't focus text area on page load
set! browser.autofocus=false

" don't animate tab-bar when switch to fullscreen
set! browser.fullscreen.animateUp=0

" don't resize when open images
set! browser.enabel_automatic_image_resizing=false

" don't show download-manager
set! browser.download.manager.showWhenStarting=false

" clear all autocmds to avoid troubles from loading rc fle several times
autocmd!

" dont close firefox after close last tab
set! browser.tabs.closeWindowWithLastTab=false

" dont show notification about video in fullscreen
set! full-screen-api.approval-required=false

" new tab
set! browser.newtab.preload=false

" /*}}}*/

" Keybindings /*{{{*/

nnoremap j 5j
nnoremap k 5k

" /*}}}*/

